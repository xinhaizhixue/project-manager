            android:layout_height="wrap_content"
            android:text="刘强华"
            android:textSize="20sp"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="284dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="任务开始时间："
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_jihuakaishishijian"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2018年12月06日"
            android:textSize="20sp"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="284dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="任务结束时间："
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_jihuajieshushijian"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2018年12月06日"
            android:textSize="20sp"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="284dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="任&#160;&#160;&#160;务&#160;&#160;&#160;描&#160;&#160;&#160;述："
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_renwumiaoshu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="就是你吗按时灯笼裤飞机嗯你就"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="20sp"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="284dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="录&#160;&#160;&#160;入&#160;&#160;&#160;时&#160;&#160;&#160;间："
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_renwulurushijian"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2020年06月09日"
            android:textSize="20sp"
            android:layout_weight="1"/>
    </LinearLayout>


